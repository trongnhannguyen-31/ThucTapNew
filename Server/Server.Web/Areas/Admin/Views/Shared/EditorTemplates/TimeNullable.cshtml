@model TimeSpan?
@using System.Globalization

<input id="@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)" name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)" value="@(Model > TimeSpan.MinValue || Model.HasValue ? Model.Value.ToString() : null)" />
<script>
    $(document).ready(function () {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoTimePicker({
            interval: 5,
            popup: {
                position: "bottom right",
                origin: "top right"
            }
        });
    });
</script>
