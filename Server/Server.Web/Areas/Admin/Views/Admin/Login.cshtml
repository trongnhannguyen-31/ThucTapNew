@using Falcon.Web.Mvc.HtmlExtensions
@model Phoenix.Server.Web.Areas.Admin.Models.Common.LoginModel

@{
    //Layout = "../Shared/BlankLayout.cshtml";
    Layout = null;
}
<!DOCTYPE html>

<html lang="en" class="light">
<head>
    <meta charset="utf-8">
    <link href="/assets/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - © 2022 by PhoenixCompany.vn</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="/assets/css/app.css" />
    <!-- END: CSS Assets-->
</head>
<!-- END: Head -->
<body class="login">
    <div class="container sm:px-10">
        <div class="block xl:grid grid-cols-2 gap-4">
            <!-- BEGIN: Login Info -->
            <div class="hidden xl:flex flex-col min-h-screen">
                <a href="https://phoenixcompany.vn" target="_blank" class="-intro-x flex items-center pt-5">
                    <img alt="#" class="w-6" src="/assets/images/logo.png">
                    <span class="text-white text-lg ml-3"> PhoenixCompany </span>
                </a>
                <div class="my-auto">
                    <img alt="Tinker Tailwind HTML Admin Template" class="-intro-x w-1/2 -mt-16" src="/assets/images/illustration.svg">
                    <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                        Hệ thống quản lý thiết bị
                    </div>
                    <div class="-intro-x mt-5 text-lg text-white text-opacity-70 dark:text-gray-500">Tối ưu hoá chi phí quản lý.</div>
                </div>
            </div>
            <!-- END: Login Info -->
            <!-- BEGIN: Login Form -->
            <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
                <div class="my-auto mx-auto xl:ml-20 bg-white dark:bg-dark-1 xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                    <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                        Đăng nhập
                    </h2>
                    <div class="intro-x mt-2 text-gray-500 xl:hidden text-center">Hệ thống quản lý thiết bị. Tối ưu hoá chi phí quản lý.</div>
                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.ReturnUrl)
                        @*@Html.ValidationSummary()*@
                        <div class="intro-x mt-8">
                            <input type="text" name="username" class="intro-x login__input form-control py-3 px-4 border-gray-300 block" placeholder="Tên đăng nhập">
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "intro-x text-theme-21 dark:text-theme-21" })

                            <input type="password" name="password" class="intro-x login__input form-control py-3 px-4 border-gray-300 block mt-4" placeholder="Mật khẩu">
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "intro-x text-theme-21 dark:text-theme-21" })

                        </div>
                        <div class="intro-x flex text-gray-700 dark:text-gray-600 text-xs sm:text-sm mt-4">
                            <div class="flex items-center mr-auto">
                                <input id="remember-me" type="checkbox" class="form-check-input border mr-2">
                                <label class="cursor-pointer select-none" for="remember-me">Ghi nhớ?</label>
                            </div>
                            @*<a href="">Forgot Password?</a>*@
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "intro-x py-3 text-theme-21 dark:text-theme-21" })

                        <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                            <button type="submit" class="btn btn-primary py-3 px-4 w-full xl:w-32 xl:mr-3 align-top">Đăng nhập</button>
                            @*<button class="btn btn-outline-secondary py-3 px-4 w-full xl:w-32 mt-3 xl:mt-0 align-top">Sign up</button>*@
                        </div>
                    }
                    <div class="intro-x mt-10 xl:mt-24 text-gray-700 dark:text-gray-600 text-center xl:text-left">
                        Contact: <a class="text-theme-25 dark:text-theme-21" href="mailto:tamnt@phoenixcompany.vn">tamnt@phoenixcompany.vn</a>
                        @*<br>*@
                        @*<a class="text-theme-25 dark:text-theme-22" href="">Terms and Conditions</a> & <a class="text-theme-25 dark:text-theme-22" href="">Privacy Policy</a>*@
                    </div>
                </div>
            </div>
            <!-- END: Login Form -->
        </div>
    </div>
    <!-- BEGIN: Dark Mode Switcher-->
    <div data-url="#" class="dark-mode-switcher cursor-pointer shadow-md fixed bottom-0 right-0 box dark:bg-dark-2 border rounded-full w-40 h-12 flex items-center justify-center z-50 mb-10 mr-10">
        <div class="mr-4 text-gray-700 dark:text-gray-300">Dark Mode</div>
        <div class="dark-mode-switcher__toggle border"></div>
    </div>
    <!-- END: Dark Mode Switcher-->
    <!-- BEGIN: JS Assets-->
    <script src="/assets/js/app.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $('.dark-mode-switcher').on('click', function () {
            if ($('html').hasClass("light")) {
                $('html').removeClass("light").addClass("dark")
            }
            else {
                $('html').removeClass("dark").addClass("light")
            }
        })
    </script>
    <!-- END: JS Assets-->
</body>
</html>